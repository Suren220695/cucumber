{
  "name": "cucumber-playwright-tests",
  "version": "1.0.0",
  "description": "Cucumber tests with Playwright",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:headless": "cucumber-js --world-parameters '{\"headless\": true}'",
    "test:headed": "cucumber-js --world-parameters '{\"headless\": false}'",
    "test:login": "cucumber-js --tags @login",
    "test:scenario-outline": "cucumber-js --tags @scenario-outline",
    "test:login-outline": "cucumber-js --tags '@login and @scenario-outline'",
    "test:labour": "cucumber-js --tags '@login and not @scenario-outline'",
    "test:roles": "cucumber-js --tags '@login and @scenario-outline'",
    "test:exclude-outline": "cucumber-js --tags '@login and not @scenario-outline'",
    "test:all": "cucumber-js --tags '@login'"
  },
  "keywords": ["cucumber", "playwright", "testing", "bdd"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0"
  }
} 